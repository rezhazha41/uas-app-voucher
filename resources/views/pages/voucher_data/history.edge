<script>
  function salin(id) {
    const kodeEl = document.getElementById('kode-' + id)
    if (!kodeEl) return alert('âš ï¸ Kode tidak ditemukan.')

    const kode = kodeEl.innerText
    navigator.clipboard.writeText(kode)
      .then(() => alert('âœ… Kode berhasil disalin ke clipboard!'))
      .catch(() => alert('âŒ Gagal menyalin kode.'))
  }
</script>

